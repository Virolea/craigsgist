<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="devise-form">
        <h2 class="text-center">Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: { class: 'input-override' } }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :username, placeholder: "username", autofocus: true, label: false %>
            <%= f.input :email, placeholder: "email", label: false %>
            <%= f.input :password, placeholder: "password", label: false %>
            <%= f.input :password_confirmation, placeholder: "confirm password", label: false %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn btn-success btn-form" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
