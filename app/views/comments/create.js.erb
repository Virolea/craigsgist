<% if @comment.errors.any? %>
  $('#new_comment').html("<%= j render 'comments/form', gist: @gist, comment: @comment %>");
<% else %>
  var new_comment = $("<%= j render 'comments/show', comment: @comment %>").hide();
  $('#comments').prepend(new_comment);
  new_comment.toggle();
  $('#comment_content').val('');
<% end %>
